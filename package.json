{
	"name": "eslint-plugin-sequel",
	"version": "1.7.0",
	"description": "Eslint rules for inline SQL",
	"keywords": [
		"eslint",
		"eslintplugin",
		"eslint-plugin",
		"sql"
	],
	"author": "Andrew Dodson",
	"main": "index.js",
	"files": [
		"index.js",
		"rules/",
		"utils/"
	],
	"scripts": {
		"lint": "eslint ./",
		"lint-fix": "npm run lint -- --fix",
		"lint-diff": "LIST=`git diff-index --name-only HEAD | grep '.*\\.js$';`; if [ \"$LIST\" ]; then eslint $LIST; fi",
		"precommit-msg": "echo 'Running pre-commit checks... (skip using --no-verify)' && exit 0",
		"semantic-release": "semantic-release",
		"test": "nyc mocha test --recursive"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/5app/eslint-plugin-sequel.git"
	},
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/5app/eslint-plugin-sequel/issues"
	},
	"homepage": "https://github.com/5app/eslint-plugin-sequel#readme",
	"dependencies": {
		"requireindex": "^1.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.0.1",
		"@commitlint/config-conventional": "^9.0.1",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"eslint": "^7.4.0",
		"eslint-config-5app": "^0.12.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"mocha": "^8.0.1",
		"nyc": "^15.1.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"semantic-release": "^17.1.1"
	},
	"nyc": {
		"check-coverage": true,
		"branches": 100,
		"lines": 100,
		"functions": 100,
		"statements": 100
	},
	"publishConfig": {
		"access": "public"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				2,
				"never",
				[
					"start-case",
					"pascal-case"
				]
			]
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E  HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged && npm run precommit-msg && npm run lint"
		}
	}
}
